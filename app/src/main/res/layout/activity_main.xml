<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient"
    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:id="@+id/start"
        android:layout_marginTop="195dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/player_ready"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        />






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner_name"
        android:layout_marginTop="750dp"
        android:textSize="30dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plus"
        android:id="@+id/plus"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="150dp"
        android:textSize="30dp"
        android:background="@drawable/buttonshape" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/call"
        android:id="@+id/call"
        android:layout_marginTop="520dp"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/place_bet"
        android:id="@+id/bet"
        android:layout_marginTop="520dp"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="360dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check"
        android:id="@+id/check"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/win"
        android:textSize="30dp"
        android:background="@drawable/buttonshape"
        android:layout_marginLeft="260dp"
        android:text="Show Hand"
        android:layout_marginTop="580dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fold"
        android:id="@+id/fold"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="160dp"
        android:textSize="30dp"
        android:background="@drawable/buttonshape" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@integer/pot"
        android:id="@+id/pot"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="95dp"/>





    <!--Player card display-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_cone"
        android:textSize="70dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="160dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_ctwo"
        android:textSize="70dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="309dp"/>


    <!--Player card checkboxes-->

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/player_card_one"
        android:layout_marginLeft="175dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="390dp"
        android:onClick="onPlayerSelect"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/player_card_two"
        android:layout_marginLeft="315dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="390dp"
        android:onClick="onPlayerSelect"/>



    <!--Community card checkboxes-->

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/community_card_one"
        android:layout_marginLeft="105dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="290dp"
        android:onClick="onCommunitySelect"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/community_card_two"
        android:layout_marginLeft="245dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="290dp"
        android:onClick="onCommunitySelect"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/community_card_three"
        android:layout_marginLeft="385dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="290dp"
        android:onClick="onCommunitySelect"/>

    <!--turn-->

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/community_card_four"
        android:layout_marginLeft="175dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="190dp"
        android:onClick="onCommunitySelect"/>

    <!--river-->

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/community_card_five"
        android:layout_marginLeft="315dp"
        android:padding="200dp"
        android:button="@android:color/transparent"
        android:layout_marginTop="190dp"
        android:onClick="onCommunitySelect"/>









    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_bet"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="125dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_chips"
        android:layout_marginLeft="5dp"
        android:textSize="30dp"
        android:layout_marginTop="65dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_name"
        android:textSize="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_call"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="185dp"/>

<!--Community cards-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="70dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="200dp"
        android:id="@+id/turn"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="70dp"
        android:layout_marginLeft="279dp"
        android:layout_marginTop="200dp"
        android:id="@+id/river"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flop_one"
        android:textSize="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="105dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flop_two"
        android:textSize="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="245dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flop_three"
        android:textSize="70dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="385dp"/>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/community_cards"
        android:textSize="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"/>


</RelativeLayout>